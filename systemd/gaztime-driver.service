[Unit]
Description=Gaztime Driver App
After=network.target gaztime-api.service
Wants=gaztime-api.service

[Service]
Type=simple
User=hein
WorkingDirectory=/home/hein/apps/gaztime/apps/driver
Environment=NODE_ENV=production
Environment=PORT=3336
Environment=VITE_API_URL=http://172.17.0.1:3333
ExecStart=/usr/bin/pnpm preview --port 3336 --host 0.0.0.0
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
